<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <p>
    <% if task.completed %>
      <input type="checkbox" checked disabled>
    <% else %>
      <input type="checkbox" disabled>
    <% end %>
      <label><%= link_to task.title, task_path(task) %> :: <%= link_to "Delete", task_path(task), method: :delete %></label>
  </p>
<% end %>

<p class="link"><%= link_to "+ Add new Task", new_task_path %></p>
